{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*",
            ],
            "vuex": [
                "./node_modules/vuex/types"
            ],
        },
        "strict": true,
        "skipLibCheck": true,
        "allowJs": true,
        "outDir": "./dist",
        // "checkJs": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types",
        ],
        "types": [
            "vuex",
            "shims-svg",
            "shims-vue",
            "md",
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/types/**/*.d.ts" 
    ],
    "exclude": [
        "node_modules"
    ]
}